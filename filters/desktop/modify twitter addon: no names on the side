! Remove the labels
x.com##[role="banner"] [role="navigation"] span:upward(1)

! Center alignment and shrink size
x.com##[role="banner"] h1:upward(2) { width: 88px !important; align-items: center !important }
x.com##[role="banner"] nav >*:style(align-items: center !important)
x.com##[role="banner"] h1:upward(3) { align-items: flex-end !important }

! Shorten the post button
x.com##[role="banner"] [href="/compose/post"] { align-items: center !important; width: 60px !important; font-size: 12px !important }
x.com##[role="banner"] [href="/compose/post"]:upward(1) { align-items: center !important }
x.com##[role="banner"] [href="/compose/post"] >* >*:style(font-size: 15px !important)

! Shorten the account switcher
x.com##[data-testid="SideNav_AccountSwitcher_Button"] >* ~*
